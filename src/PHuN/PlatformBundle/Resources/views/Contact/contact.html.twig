{# src/PHuN/PlatformBundle/Resources/views/Plugin/add_plugin.html.twig #}

{% extends "PHuNPlatformBundle::layout.html.twig" %}


{% block title %}
  Définition du schéma - {{ parent() }}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-12">
      <div class="well">
        Contact
      </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

              {# Les erreurs générales du formulaire #}
              {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.email, "Votre email", {'label_attr': {'class': 'col-sm-5 control-label'}})}}
                <div class="col-sm-7">
                    {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
                </div>  
            </div>

            <div class="form-group">
                {{ form_label(form.sujet, "Sujet de la demande", {'label_attr': {'class': 'col-sm-5 control-label'}})}}
                <div class="col-sm-7">
                    {{ form_widget(form.sujet, {'attr': {'class':'form-control'}}) }}
                </div>  
            </div> 
            <div class="form-group">
            {{ form_label(form.demande, "Demande de depôt de corpus", {'label_attr': {'class': 'col-sm-4 col-sm-offset-2 checkbox'}}) }}
            
            {{ form_widget(form.demande) }}
                  
          </div>

            <div class="form-group">
                {{ form_label(form.contenu, "Contenu", {'label_attr': {'class': 'col-sm-5 control-label'}})}}
                <div class="col-sm-7">
                    {{ form_widget(form.contenu, {'attr': {'class':'form-control'}}) }}
                </div>  
            </div>

            {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
            {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary'}}) }}


            {{ form_end(form) }} 

{% endblock %}