                <li data-target="#carousel-example-generic" data-slide-to="7"></li>
                <li data-target="#carousel-example-generic" data-slide-to="8"></li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner" role="listbox">
                <div class="item active">
                  <img class="protocol" src="{{asset('corpus/Benoîte Groult_3/instructions-png/Slide1.png')}}" alt="..." height="100%" >
                  <div class="carousel-caption">
                    
                  </div>
                </div>
                <div class="item">
                  <img class="protocol" src=" {{asset('corpus/Benoîte Groult_3/instructions-png/Slide2.png')}} " alt="..." height="100%">
