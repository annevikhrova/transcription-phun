{# src/PHuN/PlatformBundle/Resources/views/Admin/admin_edit_description.html.twig #}

{% extends "PHuNPlatformBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Admin
{% endblock %}


{% block body %}
    
{{ render(controller("PHuNPlatformBundle:Corpus:Header", { 'id': corpus.id } )) }}

    <div id="section-content" class="row">
        <div class="panel panel-default">
            <h3>Description du projet</h3>
            <div class="panel-body">
                <div class="row">
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'action': '', 'method': 'post'}}) }}
                <div class="form-group">
                    <div class="col-md-9">
                        {{ form_widget(form.description, {'attr': {'class':'tinymce','rows':'20', 'cols':'100', 'data-theme':'advanced'}}) }}
                        
                        <br/>
                        {# Submit #}
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'} }) }}
                    </div>
                </div>
                {{ form_end(form) }} 
                </div>
                       
            </div>
                
            </div>
    </div>

{{ render(controller("PHuNPlatformBundle:Corpus:Footer", { 'id': corpus.id } )) }}                 
    
    {{ tinymce_init({
            'selector': 'textarea',
            
            'plugins' : 'advlist autolink link image lists charmap print preview',
            
            'toolbar1': 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image'
    }) }}


{% endblock %} 

