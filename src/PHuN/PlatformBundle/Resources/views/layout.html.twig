{# src/PHuN/PlatformBundle/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}PHuN Plateforme{% endblock %}</title>

    {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
  </head>
  <body>
  <div class="container">
  	<div id="header" class="jumbotron">
      <h1>Ma plateforme de transcription</h1>
      <p>
        Particper au projet collaboratif de transcription de manuscrits. Créez votre projet !
      </p>
    </div>
    <div id="row">	
	  	<div id="menu" class="col-md-3">

	  		<h3>Les Images</h3>
	        <ul class="nav nav-pills nav-stacked">
	          <li><a href="{{ path('phun_platform_home') }}">Accueil</a></li>
	          <li><a href="{{ path('phun_platform_add') }}">Ajouter une image</a></li>
	        </ul>
	        <h4> Dernières transcriptions </h4>	
	      	{{ render(controller("PHuNPlatformBundle:Advert:menu", {'limit': 3})) }}
	    </div>
	    <div id="content" class="col-md-9">

		    {% block body %}
		    {% endblock %}
		</div>    
		<hr>

		<footer>
			<p>Projet open source pour les experts et amateurs de littérature {{ 'now'|date('Y') }}</p>
		</footer>	
  </div>
  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}  
  </body>
</html>