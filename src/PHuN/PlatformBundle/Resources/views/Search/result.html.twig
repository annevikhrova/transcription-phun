{% extends "PHuNPlatformBundle::layout.html.twig" %}

{% block body %}
    <style>
        body {
            padding-top: 50px;
        }
    </style>
<div class="row">
    {% if retrievedList|length > 0 %}
        <div class="row">
            <br/>
            <h3> Résultat pour la recherche avec : "{{ searchStr }}" </h3>
        </div>
        <div class="row">
        {% for result in retrievedList %}
            <div class="col-md-3">
                <div class="col-xs-6 col-md-3">

                    <a href="{{ path('phun_platform_view', {'id': result.page.id}) }}">
                        <img id="zoom_04" src="{{ asset(result.page.urlImg) }}" height="65px" data-zoom-image="{{ result.page.urlImg }}"/>  
                        <input hidden type="checkbox" name = "chk" class="transcription-selection-id" value="{{ result.page.id }}" id="{{ result.page.id }}"/>
                        {{result.page.alt}}
                        Contexte : {{ result.context }}
                    </a>

                </div>  
            </div>
        {% endfor %}
        </div>

    {% else %}
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="panel-title">Attention
                </div>
            </div> 
            <div class="panel-body">
                <h3>La recherche "{{ searchStr }}" n'a rien donné ! Si vous avez le temps,
                votre aide serait appréciés pour mettre au point un outil
                de recherche sexy. Cet outil de recherche a été mis au point dans le cadre
                d'échange Canado-Française.</h3><br/>
                <a href="{{ app.request.headers.get('referer') }}">Revenir au catalogue.</a>
            </div>
        </div>
    {% endif %}

 </div>  

{% endblock %}